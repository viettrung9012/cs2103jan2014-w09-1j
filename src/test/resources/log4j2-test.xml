<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="MINATestLoggerConfig"
	packages="sg.edu.nus.cs2103t">
	<Filter type="ThresholdFilter" level="error" />
	<Appenders>
		<Appender type="Console" name="STDOUT">
			<Layout type="PatternLayout"
				pattern="======%nTime: %d %nClass: %C{1.} [%t]%nMessage:[%p] %m%n======%n" />
			<Filters>
				<Filter type="MarkerFilter" marker="FLOW" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<Filter type="MarkerFilter" marker="EXCEPTION" onMatch="DENY"
					onMismatch="ACCEPT" />
			</Filters>
		</Appender>
	</Appenders>
	<Loggers>
		<Logger name="sg.edu.nus.cs2103t" level="error" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>